@using Umbraco.Cms.Core.Models
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<section class="choose-us-section">
    <div class="container">
        <div class="info-column">
            <h4 class="title">@Model.Value("chooseUsSectionTitle")</h4>
            <h1>@Model.Value("chooseUsHeaderTitle")</h1>
            <div class="choose-us-boxes">
                <div class="box">
                    <div class="box-item">
                        <i class="fa-light fa-thumbs-up"></i>
                    </div>     
                    <div class="box-info">
                        <h4>Process Excellence</h4>
                        <p>Lorem, ipsum dolor sit amet consecxtet.</p>
                    </div>
                </div>
                <div class="box">
                    <div class="box-item">
                        <i class="fa-light fa-chess-king"></i>
                    </div>
                    <div class="box-info">
                        <h4>Process Excellence</h4>
                        <p>Lorem, ipsum dolor sit amet consecxtet.</p>
                    </div>
                </div>
                <div class="box">
                    <div class="box-item">
                        <i class="fa-sharp fa-light fa-bezier-curve"></i>
                    </div>
                    <div class="box-info">
                        <h4>Process Excellence</h4>
                        <p>Lorem, ipsum dolor sit amet consecxtet.</p>
                    </div>
                </div>
                <div class="box">
                    <div class="box-item">
                        <i class="fa-light fa-head-side-gear"></i>
                    </div>
                    <div class="box-info">
                        <h4>Process Excellence</h4>
                        <p>Lorem, ipsum dolor sit amet consecxtet.</p>
                    </div>
                </div>
            </div>
        </div>
        @{
            var ChooseUsImg = Model.Value<MediaWithCrops>("ChooseUsImg");
            if (ChooseUsImg != null)
            {
                <img class="front-img" src="@ChooseUsImg.MediaUrl()" alt="@Model.Value("chooseUsHeaderTitle")">
            }
        }
        <div class="shadow"></div>
    </div>
</section>


