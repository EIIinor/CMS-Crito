            <a class="btn-theme" href="@Model.Value("ourTeamBtnUrl")">Browse Team <i class="fa-regular fa-arrow-up-right"></i></a>
            
            <div class="team-members">
                
                @if(pagedItems != null)
                {
                   @foreach (var item in pagedItems)
                    {
                        @Html.GetBlockListHtml(Model.OurTeamMembers)
                    }
                }
                
            </div>
            <nav class="pagination-section">
    
                @for (int i = 1; i <= Math.Ceiling((decimal)totalItems / itemsPerPage); i++)
                {
                    if (i == pageNumber)
                    {
                        <a href="#" class="item-link active">@i</a>
                    } 
                    else
                    {
                        <a href="?page=@i" class="item-link">@i</a>
                    }
                }
